{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"skipFiles": [
				"<node_internals>/**",
				"<node_modules>/**"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "npm: watch",
		},
		{
			"name": "Attach To External Debug Adapter",
			"type": "node",
			"request": "attach",
			"continueOnAttach": true,
			"port": 34198,
			"skipFiles": [
				"<node_internals>/**",
				"<node_modules>/**"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
		},
		{
			"name": "Attach To External LSP",
			"type": "node",
			"request": "attach",
			"continueOnAttach": true,
			"port": 34199,
			"skipFiles": [
				"<node_internals>/**",
				"<node_modules>/**"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
		},
		{
			"name": "Attach To External Tasks",
			"type": "node",
			"request": "attach",
			"continueOnAttach": true,
			"port": 34200,
			"skipFiles": [
				"<node_internals>/**",
				"<node_modules>/**"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
		},
		{
			"name": "Standalone Commands",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/dist/standalone.js",
			"cwd": "${env:APPDATA}/Factorio/mods/jargtestmod",
			"env": {
				"FACTORIO_UPLOAD_API_KEY":""
			},
			"args": [
			],
			"console": "integratedTerminal",
			"skipFiles": [
				"<node_internals>/**",
				"<node_modules>/**"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "npm: watch",
		},
		{
			"name": "Standalone Sumneko 3rd",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/dist/standalone.js",
			"cwd": "${workspaceFolder}",
			"args": [
				"sumneko-3rd",
				"-d","d:/factorio/factoriogit/scripts/lua_doc/doc-files/runtime-api.json",
				"${workspaceFolder}/out/sumneko-3rd",
			],
			"console": "integratedTerminal",
			"skipFiles": [
				"<node_internals>/**",
				"<node_modules>/**"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "npm: watch",
		},
	],
}
