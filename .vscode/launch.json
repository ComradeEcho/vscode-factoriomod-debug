{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"skipFiles": [
				"<node_internals>/**",
				"<node_modules>/**"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "npm: watch",
		},
		{
			"name": "Attach To External Debug Adapter",
			"type": "node",
			"request": "attach",
			"continueOnAttach": true,
			"port": 34198,
			"skipFiles": [
				"<node_internals>/**",
				"<node_modules>/**"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
		},
		{
			"name": "Attach To External LSP",
			"type": "node",
			"request": "attach",
			"continueOnAttach": true,
			"port": 34199,
			"skipFiles": [
				"<node_internals>/**",
				"<node_modules>/**"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
		},
		{
			"name": "Standalone Commands",
			"type": "node",
			"request": "launch",
			"program": "./dist/standalone.js",
			"args": [
			],
			"console": "internalConsole",
			"skipFiles": [
				"<node_internals>/**",
				"<node_modules>/**"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "npm: watch",
		},
	],
}
