{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"skipFiles": [
				"<node_internals>/**",
				"<node_modules>/**"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "npm: build",
		},
		{
			"name": "Attach To External Debug Adapter/LSP",
			"type": "node",
			"request": "attach",
			"continueOnAttach": true,
			"skipFiles": [
				"<node_internals>/**",
				"<node_modules>/**"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
		},
		{
			"name": "Standalone Commands",
			"type": "node",
			"request": "launch",
			"program": "./dist/standalone.js",
			"args": [
			],
			"console": "internalConsole",
			"skipFiles": [
				"<node_internals>/**",
				"<node_modules>/**"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "npm: build",
		},
	],
	"compounds": [
		{
			"name": "Extension + LSP",
			"configurations": [
				"Extension",
				"Attach To External Debug Adapter/LSP"
			]
		}
	]
}
