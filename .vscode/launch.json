{
	"version": "0.2.0",
	"compounds": [
		{
			"name": "Extension + LSP",
			"configurations": ["Extension", "Attach To External LSP"],
			"stopAll": true,
			"preLaunchTask": "npm: watch",
			"presentation": {
				"group": "0 - Main",
			},
		},
	],
	"configurations": [
		{
			"name": "Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"skipFiles": [
				"<node_internals>/**",
				"<node_modules>/**"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"cascadeTerminateToConfigurations": ["Attach To External LSP"],
			"presentation": {
				"hidden": true,
				"group": "0 - Main",
			},
			"serverReadyAction":{
				"action": "startDebugging",
				"name": "Attach To External Tasks",
				"killOnServerStop": false,
				"pattern": "Task forked",
			}
		},
		{
			"name": "Attach To External Debug Adapter",
			"type": "node",
			"request": "attach",
			"continueOnAttach": true,
			"port": 34198,
			"skipFiles": [
				"<node_internals>/**",
				"<node_modules>/**"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"presentation": {
				"group": "1 - Subprocesses"
			},
		},
		{
			"name": "Attach To External LSP",
			"type": "node",
			"request": "attach",
			"continueOnAttach": true,
			"port": 34199,
			"skipFiles": [
				"<node_internals>/**",
				"<node_modules>/**"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"restart": true,
			"presentation": {
				"hidden": true,
				"group": "1 - Subprocesses"
			}
		},
		{
			"name": "Attach To External Tasks",
			"type": "node",
			"request": "attach",
			"continueOnAttach": true,
			"port": 34200,
			"skipFiles": [
				"<node_internals>/**",
				"<node_modules>/**"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"presentation": {
				"hidden": true,
				"group": "1 - Subprocesses"
			},
		},
		{
			"name": "Standalone Commands",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/dist/fmtk.js",
			"env": {
				"FACTORIO_UPLOAD_API_KEY":""
			},
			"args": [
			],
			"console": "integratedTerminal",
			"skipFiles": [
				"<node_internals>/**",
				"<node_modules>/**"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "npm: watch",
			"presentation": {
				"group": "2 - Standalone",
			},
		},
		{
			"name": "Standalone Sumneko 3rd",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/dist/fmtk.js",
			"cwd": "${workspaceFolder}",
			"args": [
				"sumneko-3rd",
				"-d","d:/factorio/factoriogit/scripts/lua_doc/doc-files/runtime-api.json",
				"${workspaceFolder}/out/sumneko-3rd",
			],
			"console": "integratedTerminal",
			"skipFiles": [
				"<node_internals>/**",
				"<node_modules>/**"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "npm: watch",
			"presentation": {
				"group": "2 - Standalone",
			},
		},
		{
			"name": "Standalone Sumneko Docs",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/dist/fmtk.js",
			"cwd": "${workspaceFolder}",
			"args": [
				"docs",
				"d:/factorio/factoriogit/scripts/lua_doc/doc-files/runtime-api.json",
				"${workspaceFolder}/out/docs",
			],
			"console": "integratedTerminal",
			"skipFiles": [
				"<node_internals>/**",
				"<node_modules>/**"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "npm: watch",
			"presentation": {
				"group": "2 - Standalone",
			},
		},
	],
}
